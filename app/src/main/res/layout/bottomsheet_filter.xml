<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    android:background="@drawable/rounded_top_sheet_bg">

    <View
        android:id="@+id/handle_bar"
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_handle_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#D5D5D5"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Opciones de Filtrado"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/handle_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecciona la categoría de persona:"
        android:textSize="14sp"
        android:textColor="#555555"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="20dp"
        app:singleSelection="true"
        app:chipSpacingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CHIP HOMBRES (Añadidos Width y Height) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipHombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Hombres"
            android:textColor="@color/black"
            app:chipBackgroundColor="#F0F0F0"
            app:checkedIconVisible="false" />

        <!-- CHIP MUJERES (Añadidos Width y Height) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipMujeres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Mujeres"
            android:textColor="@color/black"
            app:chipBackgroundColor="#F0F0F0"
            app:checkedIconVisible="false" />

        <!-- CHIP NIÑOS (Añadidos Width y Height) - ESTA ERA LA LÍNEA CRÍTICA -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipNinos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Niños"
            android:textColor="@color/black"
            app:chipBackgroundColor="#F0F0F0"
            app:checkedIconVisible="false" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyFilter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Aplicar Filtros"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cornerRadius="12dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>